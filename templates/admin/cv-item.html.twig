{% extends 'admin-base.html.twig' %}

{% block body %}
    <div {{ vue_component('admin/AdminCVItemPage', {
        CVItems: CVItems,
        entityName: entityName
    }) }}>
        {{ include('components/_spinner.html.twig') }}
    </div>

    {% for CVItemForm in CVItemForms %}
        {{ include('components/_modal-window.html.twig', {
            modalId: 'form-CVItem-' ~ CVItemForm.vars.value.id,
            title: "Modifier - " ~ entityName,
            body: include('components/_CVItem-form.html.twig', {
                form: CVItemForm
            })
        }) }}
    {% endfor %}

    {{ include('components/_modal-window.html.twig', {
        modalId: 'form-new-CVItem',
        title: "Ajouter - " ~ entityName,
        body: include('components/_CVItem-form.html.twig', {
            form: newCVItemForm
        })
    }) }}

{% endblock %}