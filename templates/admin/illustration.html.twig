{% extends 'admin-base.html.twig' %}

{% block body %}
    {{ form_start(illustrationForm) }}
    <div class="row offset-3">
        <div class="form-floating col-4">
            {{ form_help(illustrationForm.media) }}
            {{ form_errors(illustrationForm.media) }}
            {{ form_row(illustrationForm.media, {
                'label': false,
                'attr': {
                    'class': 'form-control',
                    'placeholder': placeholder|default('Add placeholder'),
                    'type': type|default('text')
                }
            }) }}
        </div>
        <div {{ vue_component('components/Button', {
            label: 'upload',
            iconClassEnd: 'cloud-upload-fill'
        }) }} class="col-2"></div>
    </div>
    {{ form_end(illustrationForm) }}

    <div {{ vue_component('admin/AdminIllustrationPage', {
        illustrationImgs: illustrationImgs
    }) }}></div>

{% endblock %}

