{% extends 'admin-base.html.twig' %}

{% block body %}
    {{ form_start(motionForm) }}
    <div class="row offset-2">
        <div class="form-floating col-6">
            {{ form_help(motionForm.media) }}
            {{ form_errors(motionForm.media) }}
            {{ form_row(motionForm.media, {
                'label': false,
                'attr': {
                    'class': 'form-control',
                    'placeholder': placeholder|default('Add placeholder'),
                    'type': type|default('text')
                }
            }) }}
        </div>
        <div {{ vue_component('components/Button', {
            label: 'upload',
            iconClassEnd: 'cloud-upload-fill'
        }) }} class="col-2"></div>
    </div>
    {{ form_end(motionForm) }}

    <div {{ vue_component('admin/AdminMotionPage', {
        motionGifs: motionGifs
    }) }}></div>

{% endblock %}

