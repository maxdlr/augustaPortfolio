<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Administration{% endblock %}</title>
    <link rel="icon"
          href="{{ asset('/build/media/favicon/favicon.png') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div {{ vue_component('components/Toast', {
            message: message,
            type: type,
            manualTrigger: true
        }) }}></div>
    {% endfor %}
{% endfor %}
<main class="container-xl mt-4">
    <div class="row">
        <div class="col-md-2">
            <nav {{ vue_component('admin/AdminNavBar', {
                'navigation': navigation.getAdminNavigation
            }) }} class="sticky-top"></nav>
        </div>
        <div class="col-sm">
            {% block body %}{% endblock %}
        </div>
    </div>
</main>
</body>
</html>
